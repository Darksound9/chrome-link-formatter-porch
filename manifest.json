{
  "name": "Dagan's Jira Formatter for Slack",
  "version": "1.1",
  "description": "An extension for copying Jira links in Slack formats",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
    "content_scripts": [{
    "matches": ["https://bitbucket.org/porchsoftware/*"],
    "js": ["scripts/content.js"],
    "run_at": "document_end"
  }],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
